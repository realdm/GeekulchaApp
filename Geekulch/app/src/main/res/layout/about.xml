<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/about"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        android:paddingBottom="10dp"
         >

        <TextView
            android:id="@+id/role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Developer:"
            android:textColor="@color/pressed_example"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/developer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/role"
            android:text="Dario Mungoi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

    </RelativeLayout>

    <TextView
         android:id="@+id/desc_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/relative2"
         android:layout_below="@+id/relative2"
         android:layout_marginTop="14dp"
         android:text="About Geekulcha:"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="@color/pressed_example" />
    
     <TextView
         android:id="@+id/appDescription"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/desc_title"
         android:layout_below="@+id/desc_title"
         android:layout_marginTop="8dp"
         android:textSize="15sp"
         android:text="TextView" />

     

</RelativeLayout>